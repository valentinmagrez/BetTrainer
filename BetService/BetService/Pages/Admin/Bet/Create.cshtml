@page
@model BetService.Pages.Admin.Bet.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Bet</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bet.Odd" class="control-label"></label>
                <input asp-for="Bet.Odd" class="form-control" />
                <span asp-validation-for="Bet.Odd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bet.Name" class="control-label"></label>
                <input asp-for="Bet.Name" class="form-control" />
                <span asp-validation-for="Bet.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bet.Percentage" class="control-label"></label>
                <input asp-for="Bet.Percentage" class="form-control" />
                <span asp-validation-for="Bet.Percentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bet.BetCategory" class="control-label"></label>
                <select asp-for="Bet.BetCategory.Id" class="form-control"
                        asp-items="@Model.BetCategorySelectList">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Bet.BetCategory.Id" class="text-danger" />
            </div>            
            <div class="form-group">
                <label asp-for="Bet.Event" class="control-label"></label>
                <select asp-for="Bet.Event.Id" class="form-control"
                        asp-items="@Model.EventSelectList">
                    <option value="">-- Select Event --</option>
                </select>
                <span asp-validation-for="Bet.Event.Id" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
